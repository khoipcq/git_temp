// Description: This JavaScript code to manual add option to dropdownlist
//
// Created Date: July 26, 2013
function add_option(text,value,ddl_id)
{
  html ="<span style='text-decoration:underline'>"+text+"</span>";
  var o = new Option(html, value);
  /// jquerify the DOM object 'o' so we can use the html method
  $(o).html(text);
  $("#"+ddl_id).append(o);
}
