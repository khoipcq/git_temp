// Description: This JavaScript code customize render only date column(not include time)
// Created Date: July 26, 2013
function render_date(obj)
{
  if (obj){
    format_date = Date.parse(obj);
    return format_date.toString('MMMM d, yyyy');
  }else{
    return "";
  }
}
