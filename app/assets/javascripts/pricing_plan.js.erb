function get_feature(){
  return_value = [];
  for(var i =0; i < g_feature_ids.length; i++){
    var f_id = g_feature_ids[i];
    if($("label.active[feature_id="+ f_id +"]").attr("store") == "1"){
      return_value.push(f_id);
    }
  }
  return return_value;
}
