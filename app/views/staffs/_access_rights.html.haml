#staffs
  %ul
    %li
      %label.h3
        %i.icon-chevron-right Edit access rights
      .checkbox
        %label.checkbox-custom.padding_checkbox_custom
          %input{:name => "allow_login", :type => "checkbox"}
            %i.icon-unchecked Allow this staff member to login, view their calendar and manager their own appointments.
      %p.padding_p_custom Staff member's email address (An email will be sent to this staff member with login details)
      .row
        .col.col-lg-7.col-offset-2.padding_p_custom
          = text_field_tag :staff_member_email
    %li
      %label.h3
        %i.icon-chevron-right Additional access rights
      .row.vertical_align
        .col.col-lg-3.col-lg-3_custom
          %label.h4
            %i.icon-spinner Calendar:
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked Access to other staff member's calendar
      .row
        .col.col-lg-3.col-lg-3_custom
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked View to other staff member's appointment
      .row
        .col.col-lg-3.col-lg-3_custom
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked View and modify other staff member's appointment
      .row
        .col.col-lg-3.col-lg-3_custom
          %label.h4
            %i.icon-spinner Reviews:
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked Access to the Reviews tab
      .row
        .col.col-lg-3.col-lg-3_custom
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked View reviews for this business
      .row
        .col.col-lg-3.col-lg-3_custom
        .col.col-lg-8
          .checkbox
            %label.checkbox-custom
              %input{:name => "allow_login", :type => "checkbox"}
                %i.icon-unchecked View and publish reviews for this bussiness