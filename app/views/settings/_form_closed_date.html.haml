#form_closed_date
  .modal-dialog
    .modal-content
      .modal-header.text-center
        %h4.modal-title
          = message_header
      .modal-body
        %form.form-horizontal{:method => "get"}
          .row
            %label.col.col-lg-3.control-label
              = t('time.date')
              = t('common.from')
            .col.col-lg-4
              = text_field_tag :from_date, (Date.current - 30.days).strftime(t('time.short_format')), :class => 'input-small', readonly: "readonly"
            .col.col-lg-1
              %label.control-label
                = t('common.to')
            .col.col-lg-4
              = text_field_tag :to_date, Date.current.strftime(t('time.short_format')), :class => 'input-small', readonly: "readonly"
          .row
            %label.col.col-lg-3.control-label
              = t('common.description')
            .col.col-lg-9
              = text_area_tag :description

      .text-center
        %a#btn-apply.btn.btn-success
          = t('button.save')
        %a#btn-apply.btn.btn-warning{'data-dismiss' => 'modal'}
          = t('button.cancel')
      %br/