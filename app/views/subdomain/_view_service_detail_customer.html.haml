#view_service_detail
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title
          = message_header
      .modal-body
        .row
          %label.col.col-lg-3
            = "#{t('common.name')}"
          %p.col.col-lg-9
            = message_name
        .row
          %label.col.col-lg-3
            = "#{t('common.description')}: "
          %p.col.col-lg-9
            = message_description
        .row
          %label.col.col-lg-3
            = "#{t('services.cost')}"
          %p.col.col-lg-9
            = message_cost
      .text-center        
        %a.btn.btn-info{'data-dismiss' => 'modal'}
          = t('button.close')
      %br/